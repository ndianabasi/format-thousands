{
  "name": "format-thousands",
  "version": "2.0.0",
  "description": "Format thousands with custom separator: 1 000 000",
  "license": "MIT",
  "repository": "VovanR/format-thousands",
  "homepage": "https://github.com/VovanR/format-thousands#readme",
  "bugs": "https://github.com/VovanR/format-thousands/issues",
  "author": "Vladimir Rodkin <mail@vovanr.com> (https://github.com/VovanR)",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "main": "index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "serve": "nodemon",
    "test": "xo && nyc ava",
    "tdd": "ava -w",
    "release-patch": "mversion patch",
    "release-minor": "mversion minor",
    "release-major": "mversion major",
    "deploy": "gh-pages -d example",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "format",
    "separate",
    "thousands",
    "number"
  ],
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "ava": "^0.25.0",
    "conventional-changelog-cli": "^1.3.16",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "mversion": "^1.10.1",
    "nodemon": "^2.0.9",
    "nyc": "^11.4.1",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "xo": "^0.20.3"
  },
  "xo": {
    "esnext": false,
    "space": true
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged && npm test"
    }
  },
  "lint-staged": {
      "*.{js,ts}": [
          "eslint --fix"
      ]
  }
}
